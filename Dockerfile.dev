# Development Dockerfile for MySQL MCP Server
FROM rust:latest

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Create non-root user
RUN useradd -r -s /bin/false -m -d /home/mcp mcp && \
    chown -R mcp:mcp /app

# Switch to non-root user
USER mcp

# Expose port
EXPOSE 8080

# Set environment variables
ENV RUST_LOG=debug
ENV PORT=8080

# Default command (can be overridden)
CMD ["cargo", "run", "--release"]