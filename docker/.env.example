# Environment Variables for Multi-Environment Docker Setup
# Copy this file to .env and customize for your deployment

# MCP Server Configuration
MCP_DEFAULT_ENVIRONMENT=dev
MCP_SERVER_PORT=8080
MCP_LOG_LEVEL=info

# Development Environment Database
DEV_MYSQL_ROOT_PASSWORD=dev_root_password
DEV_MYSQL_DATABASE=dev_database
DEV_MYSQL_USER=dev_user
DEV_MYSQL_PASSWORD=dev_password

# Staging Environment Database
STAGING_MYSQL_ROOT_PASSWORD=staging_root_password
STAGING_MYSQL_DATABASE=staging_database
STAGING_MYSQL_USER=staging_user
STAGING_MYSQL_PASSWORD=staging_password

# Production Test Environment Database
PROD_TEST_MYSQL_ROOT_PASSWORD=prod_test_root_password
PROD_TEST_MYSQL_DATABASE=prod_database
PROD_TEST_MYSQL_USER=prod_user
PROD_TEST_MYSQL_PASSWORD=prod_password

# Production Environment Database (for production.yml)
PROD_MYSQL_DATABASE=prod_database
PROD_MYSQL_USER=prod_user
# Note: Production passwords should use Docker secrets, not environment variables